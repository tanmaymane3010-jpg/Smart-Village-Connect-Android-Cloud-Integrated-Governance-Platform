                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/phone_box"
                            android:padding="5dp"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                    </RelativeLayout>

                    <RelativeLayout
