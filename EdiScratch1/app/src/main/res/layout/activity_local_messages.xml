<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    tools:context=".LocalMessages">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/local_messages_border"

        >


        <RelativeLayout
            android:id="@+id/upper_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:id="@+id/layout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:baselineAligned="false">






                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:orientation="vertical"
                    android:layout_margin="5dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/autour_one"
                        android:paddingTop="10dp"
                        android:paddingStart="5dp"
                        android:paddingBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Daily Post"
                        android:textAlignment="textStart"
                        android:textColor="#000000"
                        android:textSize="15sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="10dp"

                        >

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#000000" />

                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >


                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/dailypost_layout_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >



                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/txt_LM_1_title"
                                android:background="@color/white"
                                android:padding="10dp"
                                android:hint="Title"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginStart="10dp"
                                android:textAlignment="textStart"
                                android:textColor="#000000"
                                android:textAllCaps="false"
                                android:textSize="15sp" />




                            <EditText
                                android:id="@+id/txt_LM_1_discription"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:padding="10dp"
                                android:layout_marginTop="5dp"
                                android:hint="Discription"
                                android:layout_marginBottom="20dp"
                                android:background="@color/white"
                                android:gravity="top"
                                android:textAllCaps="false"
                                android:lines="4"
                                android:textColor="#000000"
                                android:textSize="15sp" />

                            <Button
                                android:id="@+id/btn_edit_post"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Send"
                                android:clickable="true"
                                android:focusable="true"
                                android:elevation="10dp"
                                android:layout_gravity="end"
                                android:backgroundTint="#FFC107"

                                />



                        </LinearLayout>






                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/dailypost_layout_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            >





                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/txt_LM_2_title"
                                android:background="@color/white"
                                android:padding="10dp"
                                android:hint="Title"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginStart="10dp"
                                android:textAlignment="textStart"
                                android:textColor="#000000"
                                android:textAllCaps="false"
                                android:textSize="15sp" />



                            <EditText
                                android:id="@+id/txt_LM_2_discription"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:padding="10dp"
                                android:layout_marginTop="5dp"
                                android:hint="Discription"
                                android:layout_marginBottom="20dp"
                                android:background="@color/white"
                                android:gravity="top"
                                android:textAllCaps="false"
                                android:lines="4"
                                android:textColor="#000000"
                                android:textSize="15sp" />



                        </LinearLayout>







                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        >

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#000000" />

                    </LinearLayout>


                    <com.getbase.floatingactionbutton.AddFloatingActionButton
                        android:id="@+id/fab_add_new_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:fab_icon="@drawable/ic_add"
                        app:fab_stroke_visible="true"
                        app:fab_colorNormal="#FF9800"
                        android:layout_gravity="center_horizontal"
                        android:visibility="gone"
                        />





                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/send_btn_lm"
                        android:src="@drawable/ic_send"
                        android:focusable="true"
                        android:clickable="true"
                        android:elevation="10dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/white"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:padding="10dp"
                        android:visibility="gone"
                        />

                    <Button
                        android:id="@+id/btn_delete_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete Post"
                        android:clickable="true"
                        android:focusable="true"
                        android:elevation="10dp"
                        android:layout_gravity="end"
                        android:backgroundTint="#FFC107"

                        />


                </LinearLayout>




            </LinearLayout>





        </RelativeLayout>





    </RelativeLayout>





</com.google.android.material.card.MaterialCardView>